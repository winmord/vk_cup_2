<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConnectElementsFragment">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/left_element_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/rounded_shape"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:text="1"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/left_element_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/rounded_shape"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:text="2"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/left_element_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_shape"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:text="3"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/right_element_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/rounded_shape"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:text="A"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/right_element_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/rounded_shape"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:text="B"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/right_element_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_shape"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    android:text="C"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/answer_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:text="Ответить"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="invisible"
            app:cornerRadius="40dp" />
    </LinearLayout>
</RelativeLayout>